<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fallingstar.yorimi">

    <application
        android:allowBackup="true"
        android:icon="@drawable/yorimi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yorimi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MarketAddActivity" />
        <activity android:name=".RuleAddActivity.MainRuleAddActivity" />
        <activity android:name=".RuleAddActivity.OptionalRuleAddActivity" />
        <activity android:name=".Helper.Alarm.AlarmHelper" />

        <service
            android:name=".Helper.Alarm.AlarmService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".Helper.Alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fallingstar.yorimi.ALARM_START" />
            </intent-filter>
        </receiver>

        <activity android:name=".Helper.Alarm.ServiceThread" />
        <activity android:name=".VIewpagerActivity"></activity>
    </application>

</manifest>